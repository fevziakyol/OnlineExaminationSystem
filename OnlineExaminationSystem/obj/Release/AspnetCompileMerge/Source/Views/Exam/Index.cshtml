@{
    ViewBag.Title = "Sınavlar";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-primary">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box-body">
                        <div class="panel">
                            <div class="form-group col-lg-2">
                                <label for="select-lesson-type">Ders Tipi</label>
                                <select id="select-lesson-type" class="form-control">
                                    <option value="">Seçiniz</option>
                                    @foreach (var lesson in ViewBag.lessons)
                                    {
                                        <option value="@lesson.Id">@lesson.LessonName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group col-lg-4" style="margin-top: 25px;">
                                <button onclick="newExam();" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-plus"></i> Yeni Sınav</button>
                            </div>
                        </div>
                    </div>
                    <div class="box-body table-responsive">
                        <table id="table-exam" style="width: 100%" class="table table-bordered dataTable table-hover">
                            <thead>
                            <tr role="row">
                                <th>Sınav Id</th>
                                <th>Ders Adı</th>
                                <th>Sınav Adı</th>
                                <th>Sınavın Hocası</th>
                                <th>Sınav Soru Sayısı</th>
                                <th>Sınav Süresi (dk)</th>
                                <th class="nosort nofilter"></th>
                            </tr>
                            </thead>
                            <tbody id="tbody-exam"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@Html.Partial("Modal")
<script src="~/Scripts/verticalTabs.js"></script>
<script>
    var oTableExam;
    var IdToEdit = 0;
    var CanEditPath = true;
    $(document).ready(function () {
        initTableExam();
    });
    $("#select-lesson-type").change(function () {
        oTableExam.fnDraw();
    });
</script>
@section Scripts {
    @Scripts.Render("~/Scripts/exam")
}
