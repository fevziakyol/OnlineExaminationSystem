<!-- Modal New Assign Exam -->
<div class="modal fade" id="modal-new-assign-exam" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    Kullanıcıya Sınav Ata
                </h4>
            </div>
            <div class="modal-body">
                <div id="new-assign-exam-errors" style="color: red;">
                </div>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="select-new-userType" class="col-sm-3 control-label">Kullanıcı</label>
                        <div class="col-sm-9">
                            <select id="select-new-userType" class="form-control">
                                <option value="">Seçiniz</option>
                                @foreach (var user in ViewBag.userList)
                                {
                                    <option value="@user.ID">@user.Name.ToString()</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="select-new-examType" class="col-sm-3 control-label">Sınav</label>
                        <div class="col-sm-9">
                            <select id="select-new-examType" class="form-control">
                                <option value="">Seçiniz</option>
                                @foreach (var exam in ViewBag.examList)
                                {
                                    <option value="@exam.Id">@exam.ExamName.ToString()</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="select-new-assign-state" class="col-md-3 control-label">Durumu</label>
                        <div class="col-md-9">
                            <select id="select-new-assign-state" class="form-control">
                                <option value="">Seçiniz</option>
                                <option value="False">Pasif</option>
                                <option value="True">Aktif</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-default"><i class="fa fa-times"></i> İptal</button>
                <button type="button" onclick="addAssignExam();" class="btn btn-success"><i class="fa fa-check"></i> Tamam</button>
            </div>
        </div>
    </div>
</div>

